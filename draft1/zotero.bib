  author = {Jyoti Bhandari and Rouzbeh Abbassi and Vikram Garaniya and Faisal Khan},
  month = {nov},
  year = {2015},
  keywords = {Bayesian network, Blowout, Dynamic risk analysis, Kick, Managed pressure drilling},
