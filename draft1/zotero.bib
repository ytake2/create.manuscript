  author = {ChuiTing Yeo and Jyoti Bhandari and Rouzbeh Abbassi and Vikram Garaniya and Shuhong Chai and Behzad Shomali},
  month = {may},
  year = {2016},
  keywords = {Accident, Bayesian network, Dynamic risk analysis, FLNG, Safety barriers},
  pages = {259--269},
}

